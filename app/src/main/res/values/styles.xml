        <!-- item size in menu-->
        <item name="android:listPreferredItemHeightSmall" tools:targetApi="ice_cream_sandwich">40dp</item>
        <item name="listPreferredItemHeightSmall">40dp</item>

        <!-- item padding left in menu-->
