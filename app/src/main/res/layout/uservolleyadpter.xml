<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="#DDF8DD"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:id="@+id/volley_cancel"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_baseline_cancel_24" />

            <TextView
                android:id="@+id/volley_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id" />



            <TextView
                android:id="@+id/volley_name"
                android:layout_below="@+id/volley_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="name" />

            <TextView
                android:id="@+id/volley_email"
                android:layout_below="@+id/volley_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="email" />

            <TextView
                android:id="@+id/volley_gender"
                android:layout_width="wrap_content"
                android:layout_below="@+id/volley_email"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="gender" />

            <TextView
                android:id="@+id/volley_status"
                android:layout_below="@+id/volley_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Company" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>