<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wocimage"
    tools:context="com.example.urvish.Activity.WocDesignActivity">


    <TextView
        android:id="@+id/woc"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#5BC0F8"
        android:gravity="center"
        android:text="Woc Design"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/woc_recyclerview11"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/woc"
        android:layout_marginBottom="65dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scrollbars="vertical"
        android:windowSoftInputMode="adjustResize" />

    <LinearLayout
        android:id="@+id/woc_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/woc_item"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/woc_select_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:background="@color/white" />

            <ImageView
                android:id="@+id/Woc_image_cancle"
                android:layout_width="25dp"
                android:visibility="gone"
                android:layout_height="25dp"
                android:layout_alignTop="@+id/woc_select_image"
                android:layout_alignRight="@+id/woc_select_image"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/crosswrong" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <EditText
                android:id="@+id/woc_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:hint="Enter Message" />

            <CheckBox
                android:id="@+id/woc_check"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />


            <ImageButton
                android:id="@+id/woc_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:background="@drawable/ic_baseline_filter_241" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/woc_send"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:background="@color/black"
                android:text="@string/send"
                android:textColor="@color/white"
                android:visibility="gone" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

