<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.urvish.Activity.RadioButtonActivity">

    <TextView
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#5BC0F8"
        android:gravity="center"
        android:text="Check Box"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="Radio Button Example"
        android:textColor="@color/black"
        android:textSize="22dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">

        <RadioButton
            android:layout_width="match_parent"
            android:hint="Radio 1"
            android:layout_weight="1"
            android:id="@+id/radio1"
            android:textColorHint="@color/black"
            android:layout_height="match_parent"/>

        <RadioButton
            android:layout_width="match_parent"
            android:hint="Radio 2"
            android:layout_weight="1"
            android:id="@+id/radio2"
            android:textColorHint="@color/black"
            android:layout_height="match_parent"/>

        <RadioButton
            android:layout_width="match_parent"
            android:hint="Radio 3"
            android:layout_weight="1"
            android:id="@+id/radio3"
            android:textColorHint="@color/black"
            android:layout_height="match_parent"/>

    </LinearLayout>


    <RadioGroup
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:checkedButton="1"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_width="wrap_content"
            android:hint=" Radio  Button  4   "
            android:id="@+id/radio4"
            android:onClick="onCheckbox"
            android:layout_gravity="center_horizontal"
            android:textColorHint="@color/black"
            android:layout_height="wrap_content"/>


        <RadioButton
            android:layout_width="wrap_content"
            android:hint=" Radio  Button  5   "
            android:id="@+id/radio5"
            android:layout_margin="15dp"
            android:onClick="onCheckbox"
            android:layout_gravity="center_horizontal"
            android:textColorHint="@color/black"
            android:layout_height="wrap_content"/>


        <RadioButton
            android:layout_width="wrap_content"
            android:hint=" Radio  Button  6   "
            android:id="@+id/radio6"
            android:onClick="onCheckbox"
            android:layout_gravity="center_horizontal"
            android:textColorHint="@color/black"
            android:layout_height="wrap_content"/>


    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="Radio Button Group Example"
        android:textColor="@color/black"
        android:textSize="22dp" />


    <RadioGroup
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:checkedButton="1"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RadioButton
            android:layout_width="match_parent"
            android:hint="Bihar"
            android:layout_weight="1"
            android:onClick="onCheckboxClicked"
            android:id="@+id/bihar"
            android:textColorHint="@color/black"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:layout_width="match_parent"
            android:hint="Gujarat"
            android:onClick="onCheckboxClicked"
            android:layout_weight="1"
            android:id="@+id/gujarat"
            android:textColorHint="@color/black"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:layout_width="match_parent"
            android:hint="Delhi"
            android:id="@+id/delhi"
            android:onClick="onCheckboxClicked"
            android:layout_weight="1"
            android:textColorHint="@color/black"
            android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="match_parent"
                android:hint="Bhopal"
                android:id="@+id/bhopal"
                android:layout_weight="1"
                android:onClick="onCheckboxClicked"
                android:textColorHint="@color/black"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:layout_width="match_parent"
                android:hint="Assam"
                android:id="@+id/assam"
                android:layout_weight="1"
                android:onClick="onCheckboxClicked"
                android:textColorHint="@color/black"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:layout_width="match_parent"
                android:hint="Ajmer"
                android:id="@+id/ajmer"
                android:onClick="onCheckboxClicked"
                android:layout_weight="1"
                android:textColorHint="@color/black"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="match_parent"
                android:hint="Ladakh"
                android:onClick="onCheckboxClicked"
                android:id="@+id/ladakh"
                android:layout_weight="1"
                android:textColorHint="@color/black"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:layout_width="match_parent"
                android:hint="Diu"
                android:onClick="onCheckboxClicked"
                android:id="@+id/diu"
                android:layout_weight="1"
                android:textColorHint="@color/black"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:layout_width="match_parent"
                android:hint="Daman"
                android:id="@+id/daman"
                android:onClick="onCheckboxClicked"
                android:layout_weight="1"
                android:textColorHint="@color/black"
                android:layout_height="wrap_content"/>

        </LinearLayout>



    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/display_button111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="display" />


    <TextView
        android:id="@+id/list_view_check111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/list_view_check1111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textColor="@color/black"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/list_view_check11111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textColor="@color/black"
        android:textSize="20dp" />



</LinearLayout>