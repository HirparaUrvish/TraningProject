<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.urvish.Activity.ImageButtonActivity">

    <TextView
        android:id="@+id/r1"
        android:background="#5BC0F8"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:gravity="center"
        android:text="Image Button"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="Image Button Example"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <ImageButton
        android:layout_width="100dp"
        android:id="@+id/first_image"
        android:scaleType="centerCrop"
        android:src="@drawable/pngwing"
        android:background="@drawable/imagebutton"
        android:layout_gravity="center_horizontal"
        android:layout_height="100dp"/>

    <ImageButton
        android:layout_width="200dp"
        android:layout_margin="20dp"
        android:scaleType="centerCrop"
        android:background="@drawable/imagebutton"
        android:src="@drawable/meuserr"
        android:id="@+id/second_image"
        android:layout_gravity="center_horizontal"
        android:layout_height="200dp"/>

</LinearLayout>